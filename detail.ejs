<!DOCTYPE html>
<html>
<head>
<meta name="viewport" content="width=device-width, initial-scale=1">
<style>
body {font-family: Arial, Helvetica, sans-serif;}
* {box-sizing: border-box;}

input[type=text], select, textarea {
  width: 100%;
  padding: 12px;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-sizing: border-box;
  margin-top: 6px;
  margin-bottom: 16px;
  resize: vertical;
}

input[type=button] {
  background-color: #4CAF50;
  color: white;
  padding: 12px 20px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

input[type=button]:hover {
  background-color: #45a049;
}

.container {
  border-radius: 5px;
  background-color: #f2f2f2;
  padding: 20px;
}

</style>
<script>
//수정함수 정의 
function edit(){
  if(confirm("수정하시겠어요?")){
    // 동기방식으로 요청하자 
    form1.action="/hero/update";//url
    form1.method="post";//전송방식 
    form1.submit();
  }
}
//삭제함수 정의 
function del(){
  if(confirm("삭제하시겠어요?")){
    // 동기방식으로 요청하자 
    form1.action="/hero/delete";//url
    form1.method="get";//전송방식 
    form1.submit();
  }
}
</script>
</head>
<body>

<h3>상세보기</h3>

<div class="container">
  <form name="form1">  
    <input tyope="hidden" name="hero_id" value="<%=record.hero_id%>"/>
    <input type="text" id="name" name="name" value="<%=record.name%>">
    <input type="text" id="gender" name="gender" value="<%=record.gender%>">
    <input type="text" id="age" name="age" value="<%=record.age%>">
    <input type="button" value="목록보기" onClick="location.href='/hero/list';">
    <input type="button" value="수정하기" onClick="edit()">
    <input type="button" value="삭제하기" onClick="del()">
  </form>
</div>

</body>
</html>
